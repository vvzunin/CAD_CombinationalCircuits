macro(import_targets type)
    if(NOT EXISTS "${CMAKE_CURRENT_LIST_DIR}/CircuitGenGenerator-${type}-targets.cmake")
        set(${CMAKE_FIND_PACKAGE_NAME}_NOT_FOUND_MESSAGE "CircuitGenGenerator ${type} libraries were requested but not found")
        set(${CMAKE_FIND_PACKAGE_NAME}_FOUND OFF)
        return()
    endif()

    include("${CMAKE_CURRENT_LIST_DIR}/CircuitGenGenerator-${type}-targets.cmake")
endmacro()

if(NOT TARGET CircuitGenGenerator::CircuitGenGenerator)
    set(type "")

    if(DEFINED CircuitGenGenerator_SHARED_LIBS)
        if(CircuitGenGenerator_SHARED_LIBS)
            set(type "shared")
        else()
            set(type "static")
        endif()
    elseif(BUILD_SHARED_LIBS AND EXISTS "${CMAKE_CURRENT_LIST_DIR}/CircuitGenGenerator-shared-targets.cmake")
        set(type "shared")
    elseif(EXISTS "${CMAKE_CURRENT_LIST_DIR}/CircuitGenGenerator-static-targets.cmake")
        set(type "static")
    else()
        set(type "shared")
    endif()

    import_targets(${type})
    check_required_components(CircuitGenGenerator)
    message("-- Found ${type} CircuitGenGenerator (version ${${CMAKE_FIND_PACKAGE_NAME}_VERSION})")
endif()